@model IEnumerable<Product>

<div class="row pb-3">
	@foreach(var product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card p-1 shadow border-1 rounded" style="border: 0.5px solid rgba(112, 150, 110 ,1);">
					    <img src="@product.ImageUrl" class="card-img-top rounded"/>
						<div class="card-body pb-0">
							
							<div class="pl-1">
								<p class="card-title h5 text-white opacity-75 text-uppercase text-center"> @product.Title</p>
								<p class="card-title text-warning text-center">by <b>@product.Author</b></p>
							</div>

							<div class="pl-1">
								<p class= "text-danger text-opacity-75 text-center mb-0">
									List Price:
									<span class="text-decoration-line-through">
										@product.ListPrice.ToString("c")
									</span>
								</p>
							</div>
							
							<div class="pl-1">
								<p class="text-light text-opacity-75 text-center">
									As low as:<span>@product.Price100.ToString("c")</span>
								</p>
							</div>
							
							</div class="bg-gradient">
								<a asp-action="Details" asp-route-ProductID="@product.Id" class="btn btn-primary border-1 form-control">
								Details
								</a>
						    </div>
							
						</div>
				</div>
		</div>
	}
</div>
