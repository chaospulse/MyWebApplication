@model PulseModels.ShoppingCart

<form method="post">
	<input type="hidden" asp-for="ProductId" />
	<div class="card shadow border-0 mt-4 mb-4">
		<div class="card-header bg-secondary bg-gradient tet-light py-2"  style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
			<div class="row">
				<div class="col-12 text-center">
					<h3 class="text-white text-uppercase mt-1">@Model.Product.Title</h3>
					<p class="text-white text-opacity-75">by @Model.Product.Author</p>
				</div>
			</div>
		</div>
		<div class="card-body">
			
			<div class="py-0">
				<div class="row">
					<div class="col-6 col-md-2 offset-lg-1 pb-1">
						<a asp-action="Index" class="btn btn-primary shadow bg-gradient mb-2 fw-semibold btn-sm text-uppercase">
							<small>Back to Home</small>
						</a>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
					<img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
				</div>
				<div class="col-12 col-lg-6 offset-lg-1">
					<div class="row ps-2">
						<h6><span class="text-secondary h5"> Category: @Model.Product.Category.Name</span></h6>
					</div>
					
					<div class="row ps-2">
						<h6 class="text-light h5">Desription: @Html.Raw(Model.Product.Description)</h6>
					</div>
					
					<div class="row ps-2">
						<h6 class="text-danger h5">ISBN : @Model.Product.ISBN</h6>
					</div>
					<div class="row ps-2">
						<h6 class="text-white h5 pb-1">
							List Price:
							<span>
								@Model.Product.ListPrice.ToString("c")
							</span>
						</h6>
					</div>

					<div class="row ps-2">
					    <div class="row mb-0 mt-1">
							<div class="col-md-4">
								<div class="input-group mb-3">
									<span class="input-group-text bg-danger text-white border-0 fw-semibold" id="inputGroup-sizing-default">
										Count
									</span>
									<input asp-for="Count" type="number" value="1" class="form-control text-end bg-danger bg-opacity-50" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"  style="border-bottom-right-radius: 3px; border-top-right-radius: 3px;" />
								</div>
							</div>
				        </div>
					</div>
					
					<div class="row text-center ps-2">
						<div class="p-1 col-3 col-lg-2 bg-white border-bottom"  style="border: 1px solid black; ">
							<div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white border-bottom"  style="border: 1px solid black">
							<div class="text-dark text-opacity-50 fw-semibold">1-50</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white border-bottom"  style="border: 1px solid black">
							<div class="text-dark text-opacity-50 fw-semibold">51-100</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white border-bottom"  style="border: 1px solid black">
							<div class="text-dark text-opacity-50 fw-semibold">100+</div>
						</div>
					</div>
					
					<div class="row text-center text-dark ps-2">
						<div class="p-1 col-3 col-lg-2 bg-white fw-bold text-warnng shadow" style="border: 1px solid black">
							<div>Price</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white fw-bold text-warnng shadow" style="border: 1px solid black">
							<div>@Model.Product.Price.ToString("c")</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white fw-bold text-warnng shadow" style="border: 1px solid black">
							<div>@Model.Product.Price50.ToString("c")</div>
						</div>
						<div class="p-1 col-3 col-lg-2 bg-white fw-bold text-warnng shadow" style="border: 1px solid black">
							<div>@Model.Product.Price100.ToString("c")</div>
						</div>
					</div>
					
						<div class="row mt-3">
							<div class="col-12 col-md-6 pb-1">
								<button type="submit" class="btn btn-primary bg-gradient w-100 py-2 fw-semibold btn-sm text-uppercase">
									Add to Cart
								</button>
							</div>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
