@model List<PulseModels.Company>
<div class="card shadow border-0 bg-gradient ml-0 mt-4">
	<div class="card-header shadow bg-secondary bg-gradient ml-0 py-3" >
	     <div class="row">
			 <div class="col-12 col-md-6">
				 <h2 class="text-light" style="text-shadow: 2px 1px 2px white;">Company</h2>
			 </div>
		 </div>
	</div>
	
    <div class="card-body p-2">
        
	
	    <div class="col-12 pb-2 text-end">
		    <a asp-controller="Company" asp-action="Create" class="btn btn-secondary">
			<i class="bi bi-plus-circle"></i> Create New Company
		    </a>
        </div>	
	
        <table class="table table-dark table-bordered" >
	        <thead> 
	        <tr>
		    <th>Company Name</th>
			<th>Address</th>
			<th>City</th>
			<th>State</th>
			<th>Phone Number</th>
			<th>Postal Code</th>
		    <th></th>
	        </tr>
	        </thead>
	        <tbody>
				
		@foreach (var item in Model.OrderBy(u => u.Name))
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.StreetAddress</td>
				<td>@item.City</td>
				<td>@item.State</td>
				<td>@item.PhoneNumber</td>
				<td>@item.PostalCode</td>
				
				<td>
					<div class="w-75 btn-group" role="group">
					<a asp-controller="Company" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-outline-light mx-1"> 
				       <i class="bi bi-pencil-square"></i> Edit
					</a>
					<a asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1"> 
				       <i class="bi bi-trash"></i> Delete
					</a>
				</div></td>
			</tr>
		}
		</tbody>
      </table>
   </div>
</div>

