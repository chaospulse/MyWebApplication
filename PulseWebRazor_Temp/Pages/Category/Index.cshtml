@page
@model PulseWebRazor_Temp.Pages.Category.IndexModel

<div class="container">
   <div class="row pt-4" >
	<div class="col-6">
		<h2 class="text-secondary">Category List</h2>
	</div>
	<div class="col-6 text-end">
		<a asp-page="/Category/Create" class="btn btn-secondary">
			<i class="bi bi-plus-circle"></i> Create New Category
		</a>
    </div>	
<table class="table table-dark table-bordered" >
	<thead> 
	<tr>
		<th> 
			Category Name
		</th>
		<th>
			Display Order
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.MyCategories.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.DisplayOrder</td>
				<td>
					<div class="w-75 btn-group" role="group">
					<a asp-page="/Category/Edit" asp-route-id="@item.Id" class="btn btn-outline-light mx-1"> 
				       <i class="bi bi-pencil-square"></i> Edit
					</a>
					<a asp-page="/Category/Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mx-1"> 
				       <i class="bi bi-trash"></i> Delete
					</a>
				    </div>
				</td>
			</tr>
		}
    </tbody>
</table>
</div>
</div>